{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "newLine": "LF",
    "charset": "utf-8",
    "removeComments": true,
    "sourceMap": true
  },
  "filesGlob": [
    "**/*.ts",
    "!node_modules/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings/main"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
